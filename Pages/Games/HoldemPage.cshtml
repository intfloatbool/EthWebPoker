@page
@model HoldemPageModel
@{
    ViewData["Title"] = "HoldemGame page";
}

<link rel="stylesheet" href="~/css/Games/holdem.css" />
<div class="text-center">
    <p> Hello this is holdem page!</p>
    <div class="container" id="holdemView">
        <div class="row" id="gameRow">
            <div class="col">
                <h4>Vladimir Bot</h4>
                <img src="~/img/player/bot_1.png" id="playerImg" />
                <div>
                    <img src="~/img/Games/CardsResizing/BACK.png" class="playingCard" id="Player1_Card1"/>
                    <img src="~/img/Games/CardsResizing/BACK.png" class="playingCard" id="Player1_Card2"/>
                </div>
            </div>
            <div class="col">
                <h4>Boriz Bot</h4>
                <img src="~/img/player/bot_2.png" id="playerImg" />
                <div>
                    <img src="~/img/Games/CardsResizing/BACK.png" class="playingCard" id="Player2_Card1"/>
                    <img src="~/img/Games/CardsResizing/BACK.png" class="playingCard" id="Player2_Card2"/>
                </div>
            </div>
        </div>
        <div class="row" id="matchInfoRow">
            <div class="col">
                <h1>Match info</h1>
            </div>
        </div>
        <div class="row" id="tableRow">
            <div class="col">
                <div>
                    <img src="~/img/Games/CardsResizing/BACK.png" class="playingCard" id="Table_Card1"/>
                    <img src="~/img/Games/CardsResizing/BACK.png" class="playingCard" id="Table_Card2"/>
                    <img src="~/img/Games/CardsResizing/BACK.png" class="playingCard" id="Table_Card3"/>
                    <img src="~/img/Games/CardsResizing/BACK.png" class="playingCard" id="Table_Card4"/>
                    <img src="~/img/Games/CardsResizing/BACK.png" class="playingCard" id="Table_Card5"/>
                </div>
            </div>
        </div>
    </div>

    <script type="module" src="~/js/Games/Holdem/HoldemPage.js"></script>
</div>
